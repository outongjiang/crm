						$("#div_"+data.retData.id+" small").text(" "+data.retData.editTime+"由 ${sessionScope.sessionUser.name} 修改");
					}else{
						alert(data.message);
					}
				}
			})



		})

		//删除transactionRemark

		$("#RemarkdivList").on("click","a[name='deleteA']",function () {
			if(!confirm("确定要删除?")){
				return false;
			}
			//收集参数
			var id=$(this).attr("remarkId");
			$.ajax({
				url:"workbench/transaction/deleteTranRemarkById.do",
				type:"post",
				dataType:"json",
				data:{
					id:id
				},
				success:function (data) {
					if(data.code=="1"){
						$("#div_"+id).remove();
					}else{
						alert(data.message);
					}
				}
			})


		})
	});
	
	
	
